<GridPane xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fhtw.at.tourplanner.view.TourTabController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
        <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308" minWidth="10.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="-Infinity" minHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="30.0" vgrow="NEVER" />
      <RowConstraints />
    </rowConstraints>
    <children>
        <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" GridPane.columnSpan="2147483647" GridPane.rowIndex="1">
            <tabs>
                <Tab text="Route">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <ImageView fx:id="image" fitHeight="300.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true" />
                     </children></AnchorPane>
                    </content>
                </Tab>
                <Tab text="Description">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TextArea fx:id="descriptionText" editable="false" prefHeight="200.0" prefWidth="200.0" />
                     </children></AnchorPane>
                    </content>
                </Tab>
            <Tab text="Details">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <GridPane>
                          <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                          </columnConstraints>
                          <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                          </rowConstraints>
                           <children>
                              <TextField fx:id="detailsFrom" editable="false" GridPane.columnIndex="1" />
                              <TextField fx:id="detailsTo" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                              <Label text="From:" />
                              <Label text="To:" GridPane.rowIndex="1" />
                              <Label text="Transport Type:" GridPane.rowIndex="2" />
                              <ComboBox fx:id="detailsTransportType" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                           </children>
                        </GridPane>
                     </children></AnchorPane>
               </content>
            </Tab>
            </tabs>
        </TabPane>
        <Label text="Title: " />
        <TextField fx:id="tourTitle" editable="false" GridPane.columnIndex="1" />
        <Button fx:id="editButton" onAction="#editTour" text="Edit" GridPane.columnIndex="2" GridPane.halignment="RIGHT" />
        <TableView fx:id="logTableView" prefHeight="200.0" prefWidth="200.0" GridPane.columnSpan="2147483647" GridPane.rowIndex="3">
            <columns>
                <TableColumn fx:id="logDate" prefWidth="75.0" text="Date" />
                <TableColumn fx:id="logDuration" prefWidth="75.0" text="Duration" />
                <TableColumn fx:id="logDifficulty" prefWidth="75.0" text="Difficulty" />
                <TableColumn fx:id="logComment" prefWidth="75.0" text="Comment" />
                <TableColumn fx:id="logRating" prefWidth="75.0" text="Rating" />
            </columns>
        </TableView>
        <Label text="Logs: " GridPane.rowIndex="2" />
        <Button fx:id="addLogButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#addNewLog" prefHeight="25.0" prefWidth="25.0" text="+" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Button fx:id="deleteLogButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#deleteLog" prefHeight="25.0" prefWidth="25.0" text="-" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
      <Button fx:id="editLogButton" layoutX="103.0" layoutY="73.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#editLog" prefHeight="25.0" prefWidth="40.0" text="Edit" GridPane.columnIndex="2" GridPane.rowIndex="2" />
    </children>
</GridPane>
