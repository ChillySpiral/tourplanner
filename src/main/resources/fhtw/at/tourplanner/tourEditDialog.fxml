<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="fhtw.at.tourplanner.view.TourEditController"
            prefHeight="400.0" prefWidth="600.0">

    <content>
        <GridPane hgap="5" vgap="5">
            <Label text="Title:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="title" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextArea fx:id="description" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="From:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="from"  GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.fillWidth="false"/>

            <Label text="To:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <TextField fx:id="to" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.fillWidth="false"/>

            <columnConstraints>
                <ColumnConstraints/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>
        </GridPane>
    </content>

    <buttonTypes>
        <ButtonType text="OK" buttonData="OK_DONE"/>
        <ButtonType text="Close" buttonData="CANCEL_CLOSE"/>
    </buttonTypes>

</DialogPane>
