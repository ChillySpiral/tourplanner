<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fhtw.at.tourplanner.view.SearchBarController">
    <columnConstraints>
        <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="200.0" />
        <ColumnConstraints fillWidth="false" hgrow="NEVER" minWidth="10.0" prefWidth="40.0" />
      <ColumnConstraints fillWidth="false" hgrow="NEVER" minWidth="10.0" prefWidth="50.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="-Infinity" minHeight="10.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <TextField fx:id="searchField" promptText="Search" />
        <Button fx:id="searchButton" mnemonicParsing="false" onAction="#searchTours" text="Go!" GridPane.columnIndex="1" />
      <Button fx:id="clearButton" mnemonicParsing="false" onAction="#clearSearch" text="Clear" GridPane.columnIndex="2" />
    </children>
</GridPane>
